#!/bin/sh
# Hotplug script for wg-obfuscator

. /lib/functions.sh

case "$ACTION" in
    ifup)
        # Start wg-obfuscator when interface comes up
        if [ "$INTERFACE" = "wan" ]; then
            /etc/init.d/wg-obfuscator start
        fi
        ;;
    ifdown)
        # Stop wg-obfuscator when interface goes down
        if [ "$INTERFACE" = "wan" ]; then
            /etc/init.d/wg-obfuscator stop
        fi
        ;;
esac